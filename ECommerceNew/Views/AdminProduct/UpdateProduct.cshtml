@model EntityLayer.Concreate.EntityFramework.Product

@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/Shared/AdminPanelLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Ürün Güncelleme Formu</h4>
            @using (Html.BeginForm("UpdateProduct", "AdminProduct", FormMethod.Post))
            {
                <div class="form-group">
                    @Html.HiddenFor(x => x.ProductID, new { @class = "form-control" })
                    <label for="exampleInputName1">Ürün Fotoğrafları</label>
                    @Html.TextBoxFor(x => x.ProductImg1, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.ProductImg1, null, new { @class = "text-danger" })
                    <br />
                    @Html.TextBoxFor(x => x.ProductImg2, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.ProductImg2, null, new { @class = "text-danger" })
                    <br />
                    @Html.TextBoxFor(x => x.ProductImg3, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.ProductImg3, null, new { @class = "text-danger" })
                    <br />
                    <label for="exampleInputName1">Ürün adı</label>
                    @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.ProductName, null, new { @class = "text-danger" })
                    <br />
                    <label for="exampleInputName1">Fiyat</label>
                    @Html.TextBoxFor(x => x.ProductPrice, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.ProductPrice, null, new { @class = "text-danger" })
                    <br />
                    <label for="exampleInputName1">Açıklama</label>
                    @Html.TextBoxFor(x => x.ProductDescription, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.ProductDescription, null, new { @class = "text-danger" })
                    <br />
                    @Html.TextBoxFor(x => x.Category.CategoryName, new { @class = "form-control" })



                    <br />

                </div>


                <button class="btn btn-primary mr-2">Güncelle</button>

            }

        </div>
    </div>
</div>

