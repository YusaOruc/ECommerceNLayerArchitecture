@using EntityLayer.Concreate.EntityFramework
@model List<Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}


<!-- Hero Section Begin -->
@await Component.InvokeAsync("HomeSlider")
<!-- Hero Section End -->

<section class="product spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <ul class="filter__controls">
                    <hr />
                    <li class="active" data-filter="*">ÜRÜNLERİMİZ @ViewBag.user</li>
                    <hr />
                    @ViewBag.user
                </ul>
            </div>
        </div>
        <div class="row product__filter">
            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-6 col-sm-6 col-md-6 col-sm-6 mix new-arrivals">
                    <div class="product__item">
                        <div class="product__item__pic set-bg" data-setbg="@item.ProductImg1">
                            <a style="border-style: none;"  href="/ShoppingProduct/ProductDetails/@item.ProductID"><img style="width:100%;height:100%;"  alt=""></a>
                            @*<a href="/ShoppingProduct/ProductDetails/@item.ProductID"><img style="width:300px;height:250px;"  src="@item.ProductImg1" alt=""></a>*@
                            <ul class="product__hover">
                                <li><a href="@(User.Identity.Name==null?"/Login/Index/":"/ProductAddToFavorite/ProductFavorite/")@item.ProductID"><img style="background-color:transparent" src="~/malefashion-master/img/icon/fav.png" alt=""></a></li>

                            </ul>
                        </div>
                        <div class="product__item__text">
                            <h6>@item.ProductName</h6>
                            <a href="@(User.Identity.Name==null?"/Login/Index/":"/ProductAddToBasket/Index/")@item.ProductID" class="add-cart">+ Sepete Ekle</a>
                            <br />
                            <h5>@item.ProductPrice TL</h5>

                        </div>
                    </div>
                </div>
            }


        </div>
    </div>
</section>

