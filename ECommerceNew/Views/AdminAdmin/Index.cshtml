
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminPanelLayout.cshtml";
}
@using X.PagedList.Mvc.Core;
@using X.PagedList;
@using EntityLayer.Concreate.EntityFramework
@model IPagedList<Admin>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Admin Tablosu</h4>

            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Admin ID
                            </th>
                            <th>
                                Admin Adı
                            </th>
                            <th>
                                Admin Şifresi
                            </th>
                            <th>
                                Sil
                            </th>
                            <th>
                                Güncelle 
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>

                            <td>
                                @item.AdminID
                            </td>
                            <td>
                                @item.AdminName
                            </td>
                            <td>
                                @item.AdminPassword
                            </td>
                            <td>
                                <a id="delete" href="/AdminAdmin/DeleteAdmin/@item.AdminID" class="btn btn-danger">Sil</a>
                            </td>
                            <td>
                                <a id="delete" href="/AdminAdmin/UpdateAdmin/@item.AdminID" class="btn btn-success">Güncelle</a>
                            </td>

                        </tr>
                        }


                    </tbody>
                </table>
            </div>
            <br />
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }), new X.PagedList.Web.Common.PagedListRenderOptions
             {
                      DisplayLinkToIndividualPages = true,
                      DisplayPageCountAndCurrentLocation = false,
                      MaximumPageNumbersToDisplay = 10,
                      LiElementClasses = new string[] { "page-item" },
                 PageClasses = new string[] { "page-link" },

                  })
        </div>

    </div>
</div>

