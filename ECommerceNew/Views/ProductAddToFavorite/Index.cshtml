@using EntityLayer.Concreate.EntityFramework
@model List<Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}
<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__text">
                    <h4>Favorilerim</h4>
                    <div class="breadcrumb__links">
                        <a href="/HomeProduct/Index/">Ana Sayfa</a>
                        <a href="/ShoppingProduct/Index/">Mağaza</a>
                        <span>Favorilerim</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<br />
<br />
<!-- Breadcrumb Section End -->
<section class="product spad">
    <div class="container">

        <div class="row product__filter">
            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-6 col-sm-6 col-md-6 col-sm-6 mix new-arrivals">
                    <div class="product__item">
                        <div class="product__item__pic set-bg" data-setbg="@item.ProductImg1">
                            <a style="border-style: none;" href="/ShoppingProduct/ProductDetails/@item.ProductID"><img style="width:100%;height:100%;" alt=""></a>
                            <ul style="background-color:transparent" class="product__hover">
                                <li><a href="/ProductAddToFavorite/ProductFavoriteDelete/@item.ProductID"><img style="background-color:transparent" src="~/malefashion-master/img/icon/cross.png" alt=""></a></li>

                            </ul>
                        </div>
                        <div class="product__item__text">
                            <h6>@item.ProductName</h6>
                            <a href="/ProductAddToBasket/Index/@item.ProductID" class="add-cart">+ Sepete Ekle</a>
                            <br />
                            <h5>@item.ProductPrice TL</h5>

                        </div>
                    </div>
                </div>
            }


        </div>
    </div>
</section>
