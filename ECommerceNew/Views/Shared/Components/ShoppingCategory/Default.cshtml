@using EntityLayer.Concreate.EntityFramework
@model List<Category>
<div class="col-lg-3">
    <div class="shop__sidebar">
        <div class="shop__sidebar__search">
            <form method="get" action="/ShoppingProduct/Index/">
                <input name="p"id="p" type="text" placeholder="Search...">
                <button type="submit"><span class="icon_search"></span></button>
            </form>
        </div>
        <div class="shop__sidebar__accordion">
            <div class="accordion" id="accordionExample">
                <div class="card">
                    <div class="card-heading">
                        <a data-toggle="collapse" data-target="#collapseOne">Kategoriler</a>
                    </div>
                    <div id="collapseOne" class="collapse show" data-parent="#accordionExample">
                        <div class="card-body">
                            <div class="shop__sidebar__categories">
                                <ul class="nice-scroll">
                                    <li><a href="/ShoppingProduct/Index/1">Hepsi</a></li>
                                    @foreach (var item in Model)
                                    {
                                        
                                       <li><a href="/ShoppingProduct/GetCategoryProduct/@item.CategoryID">@item.CategoryName</a></li>
                                        

                                    }

                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>